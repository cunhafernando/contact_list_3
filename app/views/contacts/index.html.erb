<div class="row">
  <div class="col-md-12 text-center">
    <h1>Meus Contatos</h1>
  </div>

  <div class="col-md-8 offset-2 col-xs-12">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Phone</th>
          <th colspan="2">
            <%= link_to 'New Contact', new_contact_path, class: 'btn btn-success' %>
          </th>
        </tr>
      </thead>

      <tbody>

        <% if @contacts.empty? %>
          <tr>
            <td colspan="4" class="text-center">
              <h2>Sem contatos cadastrados.</h2>
              <%= link_to 'Clique aqui', new_contact_path %> para cadastrar um novo contato.
            </td>
          </tr>
        <% end %>
        <% @contacts.each do |c| %>
          <tr>
            <td>
                <%= c.name %>
              </td>
              <td>
                <%= c.phone %>
              </td>
              <td>
                <%= link_to 'Editar', edit_contact_path(c), class: 'btn btn-warning' %>
              </td>
              <td>
                <%= link_to 'Excluir', contact_path(c), method: :delete, class: 'btn btn-danger', data: { confirm: 'Tem certeza que deseja excluir?' } %>
              </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>



<br>

