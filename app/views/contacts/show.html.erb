<div class="row">
  <div class="col-md-12 text-center">
    <h3><%= notice %></h3>
  </div>

  <div class="col-md-8 offset-2 col-xs-12">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Phone</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
          <tr>
            <td>
              <%= @contact.name %>
            </td>
            <td>
              <%= @contact.phone %>
            </td>
            <td>
              <%= link_to 'Edit', edit_contact_path(@contact), class: 'btn btn-warning' %>
            </td>
            <td>
              <%= link_to 'Back', contacts_path, class: 'btn btn-info' %>
            </td>
          </tr>
      </tbody>
    </table>
  </div>
</div>


